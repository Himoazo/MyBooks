@model MyBooks.Models.Borrowing

@{
    ViewData["Title"] = "Delete";
}


<div class="container mt-4">
    <h1 class="text-danger mb-3">Ta bort</h1>

    <div class="alert alert-warning">
        <h3 class="mb-0">Är du säker att du vill ta bort detta lån?</h3>
    </div>

    <div class="card shadow-sm p-4 bg-light">
        <dl class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Borrow_date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Borrow_date)
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Return_date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Return_date)
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Due_date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Due_date)
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.User.User_Name)
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Book)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Book.Book_name)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="BorrowingID" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Radera</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Tillbaka till listan</a>
        </div>
    </form>
</div>