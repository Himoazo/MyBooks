@model MyBooks.Models.Borrowing

@{
	ViewData["Title"] = "Create";
}


<div class="container mt-4">
	<h1 class="mb-3">Låna bok</h1>

	@if (ViewData["Availability"] != null)
	{
		<div class="alert alert-info mb-3">
			<h5 class="mb-0">@ViewData["Availability"]</h5>
		</div>
	}

	<hr />

	<div class="row justify-content-center">
		<div class="col-md-6">
			<form asp-action="Create" class="p-4 border rounded bg-light shadow-sm">
				<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

				<div class="mb-3">
					<label asp-for="Borrow_date" class="form-label fw-bold"></label>
					<input type="date" asp-for="Borrow_date" class="form-control" value="@ViewData["Borrow_date"]" readonly />
					<span asp-validation-for="Borrow_date" class="text-danger"></span>
				</div>

				<input type="hidden" asp-for="UserID" value="@ViewBag.UserID" />

				<div class="mb-3">
					<label asp-for="BookID" class="form-label fw-bold"></label>
					<select asp-for="BookID" class="form-select" asp-items="ViewBag.BookID"></select>
				</div>

				<div class="d-flex gap-2">
					<button type="submit" class="btn btn-primary">Låna</button>
					<a asp-action="Index" class="btn btn-outline-secondary">Tillbaka till lånelistan</a>
					<a asp-controller="Books" asp-action="Index" class="btn btn-outline-secondary">Tillbaka till boklistan</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
