@model IEnumerable<MyBooks.Models.Borrowing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Borrow_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Return_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Due_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Borrow_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Return_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BorrowingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BorrowingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BorrowingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
