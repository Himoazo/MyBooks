@model IEnumerable<MyBooks.Models.Borrowing>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
<h1 class="mb-3">Boklån</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Låna böcker</a>
</p>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Book)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Borrow_date)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Return_date)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Due_date)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.User)
                </th class="text-center">

                <th class="text-center">Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Book.Book_name)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Borrow_date)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Return_date)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Due_date)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.User.User_Name)
                    </td>

                    <td class="text-center">
                        @if (item.Return_date == null)
                        {
                            <a asp-action="Borrow" asp-route-id="@item.BorrowingID" class="btn btn-sm text-success">Lämna tillbaka</a>
                        } else
                        {
                            <span class="btn btn-sm text-secondary">( Återlämnad )</span>
                        }
                        |
                    <a asp-action="Details" asp-route-id="@item.BorrowingID" class="btn btn-sm text-info">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.BorrowingID" class="btn btn-sm text-danger">Ta bort</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>