@model MyBooks.Models.Borrowing


@{
    ViewData["Title"] = "Edit";
}


<h1>Återlämna boken</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Borrow" class="p-4 border rounded bg-light shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="BorrowingID" />
            <div class="mb-3">
                <label asp-for="Return_date" class="control-label"></label>
                <input type="date" asp-for="Return_date" class="form-control" value="@ViewData["Return_date"]" readonly />
                <span asp-validation-for="Return_date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BookID" class="control-label"></label>
                <select asp-for="BookID" class="form-control" asp-items="ViewBag.BookID"></select>
                <span asp-validation-for="BookID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Bekräfta</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Tillbaka till listan</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
