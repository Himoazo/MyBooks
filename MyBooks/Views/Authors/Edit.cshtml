@model MyBooks.Models.Author

@{
    ViewData["Title"] = "Edit";
}


<h1>Redigera</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="p-4 border rounded bg-light shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="AuthorID" />
            <div class="mb-3">
                <label asp-for="Author_Name" class="control-label"></label>
                <input asp-for="Author_Name" class="form-control" />
                <span asp-validation-for="Author_Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Spara</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Tillbaka till författarlistan</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
