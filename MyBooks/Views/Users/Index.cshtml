@model IEnumerable<MyBooks.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
<h1 class="mb-3">Användarkonton</h1>

<p>
        <a asp-action="Create" class="btn btn-primary">Skapa användarkonto</a>
</p>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.User_Name)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center">Åtgärder</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.User_Name)
                </td>
                 <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.UserID" class="btn btn-sm text-warning">Redigera</a> |
                        <a asp-action="Details" asp-route-id="@item.UserID" class="btn btn-sm text-info">Detaljer</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-sm text-danger">Ta bort</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>