@model MyBooks.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-danger mb-3">Ta bort</h1>

    <div class="alert alert-warning">
        <h3 class="mb-0">Är du säker att du vill ta bort denna bok?</h3>
    </div>

    <div class="card shadow-sm p-4 bg-light">
        <dl class="row">
            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Book_name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Book_name)
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Genre)
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Author!.AuthorID)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="BookID" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Ta bort</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Tillbaka till boklistan</a>
        </div>
    </form>
</div>
