@model MyBooks.Models.Book

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="mb-3">Lägg till en ny bok</h1>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="p-4 border rounded bg-light shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Book_name" class="form-label fw-bold"></label>
                    <input asp-for="Book_name" class="form-control" />
                    <span asp-validation-for="Book_name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Genre" class="form-label fw-bold"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorID" class="form-label fw-bold"></label>
                    <select asp-for="AuthorID" class="form-select" asp-items="ViewBag.AuthorID"></select>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Skapa</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Tillbaka till boklistan</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
